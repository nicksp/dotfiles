#!/bin/bash
#
# List processes running on a provided port.
#
# - Check the port usage:
#
# `check-port {{port}}`
#
# ---
# Author: Nick Plekhanov, https://plekhanov.me
# License: MIT
# https://github.com/nicksp/dotfiles

set -euo pipefail

if [ "$#" -eq 0 ]; then
  echo "Usage: $(basename "$0") <port_number>"
  exit 1
fi

lsof -ni4TCP:"$1"
