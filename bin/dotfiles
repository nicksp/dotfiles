#!/bin/bash
#
# Update dotfiles.
#
# ---
# Author: Nick Plekhanov, https://plekhanov.me
# License: MIT
# https://github.com/nicksp/dotfiles

set -eu

cd "$HOME/dotfiles" &> /dev/null || return

echo "Pulling changes from upstream…"
git pull
echo
echo "🦏 Open a new terminal for the changes to take effect."
