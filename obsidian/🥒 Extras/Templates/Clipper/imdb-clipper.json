{
	"schemaVersion": "0.1.0",
	"name": "IMDB",
	"behavior": "create",
	"noteContentFormat": "# {{selector:h1 .hero__primary-text}}",
	"properties": [
		{
			"name": "director",
			"value": "{{selector:[data-testid=\\\"title-pc-principal-credit\\\"]:first-child a|unique|wikilink|join}}",
			"type": "multitext"
		},
		{
			"name": "cast",
			"value": "{{selector:[data-testid=\\\"title-pc-principal-credit\\\"]:nth-child(3) div a|unique|wikilink|join}}",
			"type": "multitext"
		},
		{
			"name": "cover",
			"value": "{{schema:image}}",
			"type": "text"
		},
		{
			"name": "plot",
			"value": "{{schema:description}}",
			"type": "text"
		},
		{
			"name": "rating",
			"value": "{{selector:[data-testid=\\\"hero-rating-bar__user-rating__score\\\"] span|unique}}",
			"type": "number"
		},
		{
			"name": "scoreImdb",
			"value": "{{schema:aggregateRating.ratingValue}}",
			"type": "number"
		},
		{
			"name": "year",
			"value": "{{schema:datePublished|split:\\\"-\\\"|slice:0,1}}",
			"type": "number"
		},
		{
			"name": "tags",
			"value": "movies",
			"type": "multitext"
		}
	],
	"triggers": [
		"/^https:\\/\\/www\\.imdb\\.com\\/title\\/tt\\d+(?!\\/reference\\/)(\\/[^\\s]*)?$/"
	],
	"noteNameFormat": "{{schema:name}}",
	"path": "üóÇÔ∏è References/Movies"
}